<!DOCTYPE html>
<html>
<head>
  <title>Flashcards</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body id="<%= controller.controller_name %>_<%= controller.action_name %>">

	<section id="content">
		<header id="main">
			This is the header.
		</header>

		<nav id="session_links">
			<% if current_user %>
				<%= link_to 'Edit Profile', edit_registration_path(current_user) %> |
				<%= link_to 'Logout', logout_path, :method => :delete %>
			<% end %>
		</nav>

		<%= yield %>
		
		<nav id="ribbon">
			<ul>
				<li><%= link_to 'About', '' %></li>
				<li><%= link_to 'Contact', '' %></li>
			</ul>
		</nav>
	</section>

</body>
</html>












