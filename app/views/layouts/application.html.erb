<!DOCTYPE html>
<html>
<head>
  <title>Flashcards</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body id="<%= controller.controller_name %>_<%= controller.action_name %>">

	<div id="page">
		
		<header id="main">
			<div class="narrow">
				<h1><%= yield :page_header %></h1>
			</div>
		</header>
		
		<% flash.each do |type, msg| %>
			<div id="<%= type %>" class="flash_msg">
				<div class="narrow">
					<div class="content">
						<%= msg %>
						<%# if type == :notice %>
							<%# image_tag "success_64.png" %>
						<%# end %>
					</div>
				</div>
			</div>
		<% end %>

		<div class="narrow">
			<section id="content"><%= yield %></section>

			<section id="control_panel">
				<nav id="session_links">
					<% if current_user %>
						<%= link_to 'Your Profile', edit_registration_path(current_user) %> |
						<%= link_to 'Logout', logout_path, :method => :delete %>
					<% end %>
				</nav>
			
				<h1>Little White Cards</h1>
				<nav id="ribbon">
					<ul>
						<%= yield :ribbon_links %>
						<li class="about_us"><%= link_to 'About', '' %></li>
						<li class="contact_us"><%= link_to 'Contact', '' %></li>
						<li id="end"></li>
					</ul>
				</nav>
			</section>
		</div> <!--end narrow-->
			
		<footer id="main">
			<div class="narrow">
				Copyright &copy; 2012 - <%= Time.zone.now.year %>
				<%= link_to 'LittleWhiteCards.com', root_path %>
				<%= link_to 'About', '', class: 'about_us' %>
				<%= link_to 'Contact', '', class: 'contact_us' %>
			</div>
		</footer>
	</div> <!--end page-->

</body>
</html>












