<% if @card.errors.any? %>
	$("#notice").html( "<%= @card.errors.full_messages.join(', ') %>" );
<% else %>
	$("#notice").html( "The \"<%= @card.content %>\" card was added" );
	$("#card_content").val( "" );
	$("#new_cards").prepend( "<li><%= j render( @card ) %></li>" );
	$('.rest-in-place').restInPlace( );
<% end %>